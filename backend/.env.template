# Django 설정
SECRET_KEY=django-insecure-test-key-for-development-only-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Supabase 설정
# TODO: Supabase Dashboard에서 실제 값으로 변경하세요
# Settings > API > Project URL
SUPABASE_URL=https://your-project.supabase.co

# Settings > API > Project API keys > anon key
SUPABASE_KEY=your-anon-key-here

# Settings > API > Project API keys > service_role key
SUPABASE_SERVICE_KEY=your-service-role-key-here

# 데이터베이스 (Supabase PostgreSQL)
# Settings > Database > Connection string > URI (Session mode)
# 비밀번호를 실제 값으로 변경하세요
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# CORS 설정
CORS_ALLOWED_ORIGINS=http://localhost:5173

# 파일 업로드 설정
MAX_UPLOAD_SIZE=10485760
